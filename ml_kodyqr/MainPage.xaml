<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ml_kodyqr.MainPage" Title="Generator QR">

    <VerticalStackLayout Padding="5">
        <Label Text="Podaj dane do zakodowania" HorizontalOptions="Center" FontSize="20"></Label>
        <Entry x:Name="tEntry" Placeholder="https://youtube.com"/>
        <Button Text="Generuj" Clicked="Button_Clicked"/>
        <Image Margin="20" x:Name="img"/>
    </VerticalStackLayout>

</ContentPage>
